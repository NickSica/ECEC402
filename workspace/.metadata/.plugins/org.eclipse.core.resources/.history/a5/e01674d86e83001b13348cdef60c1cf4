/*
 * helloworld.c: simple test application
 *
 * This application configures UART 16550 to baud rate 9600.
 * PS7 UART (Zynq) is not initialized by this application, since
 * bootrom/bsp configures it to baud rate 115200
 *
 * ------------------------------------------------
 * | UART TYPE   BAUD RATE                        |
 * ------------------------------------------------
 *   uartns550   9600
 *   uartlite    Configurable only in HW design
 *   ps7_uart    115200 (configured by bootrom/bsp)
 */

#include <stdio.h>
#include "platform.h"
#include "xil_printf.h"

#define BUFF_LENGTH 128
//Format: Re0,Im0,Re1,Im1,...
int32 ping[2 * BUFF_LENGTH];
int32 pong[2 * BUFF_LENGTH];
int32* InBuf = ping;
int32* OutBuf = pong;

void switch_buffers(void)
{
    // Change pointers to buffers
    if (InBuf == ping)
    {
        OutBuf = ping;
        InBuf = pong;
    }
    else
    {
I       InBuf = ping;
        OutBuf = pong;
    }
}

void swap(int32* i1, int32* i2)
{
    int32 temp = *i1;
    *i1 = *i2;
    *i2 = temp;
}

void doFFT(int32 *data)
{
    unsigned long nn = BUFF_LENGTH;
    unsigned long n, mmax, m, j, istep;
    double wtemp, wr, wpr, wpi, wi, theta;
    double tempr, tempi;
    // reverse-binary reindexing
    n = nn << 1;
    j = 1;
    for(unsigned long i = 1; i < n; i += 2)
    {
        if(j > i)
        {
            swap(&data[j-1], &data[i-1]);
            swap(&data[j], &data[i]);
        }

        m = nn;
        while(m >= 2 && j > m)
        {
            j -= m;
            m >>= 1;
        }
        j += m;
    }
}

int main()
{
    init_platform();

    print("Hello World\n\r");
    print("Successfully ran Hello World application");
    cleanup_platform();
    return 0;
}


